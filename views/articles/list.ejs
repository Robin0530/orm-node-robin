<div id="wrapper">
        <!--우측 영역-->
        <div id="page-wrapper" class="gray-bg">

            <!--우측 상단 헤더 영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>게시글 목록 조회</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Home/Index">Home></a>
                        </li>
                        <li>
                            <a>게시글 목록></a>
                        </li>
                        <li class="active">
                            <strong>조회</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <!-- 게시글 조회 옵션 입력 영역 -->
                <form action="/articles/list" method="post" id="searchForm">
                    <div class="ibox-content m-b-sm border-bottom">
                        <!-- 눈에 보이지 않는 12칸 생성 -->
                        <div class="row">
                            <!-- 칸을 4개씩 3등분 -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="OrderNo">게시판</label>
                                    <select name="boardTypeCode" id="boardTypeCode" class="form-control">
                                        <option value="0" <% if( searchOption.boardTypeCode == 0){ %> selected <% } %>>전체</option>
                                        <option value="1" <% if( searchOption.boardTypeCode == 1){ %> selected <% } %>>야구 게시판</option>
                                        <option value="2" <% if( searchOption.boardTypeCode == 2){ %> selected <% } %>>축구 게시판</option>
                                        <option value="3" <% if( searchOption.boardTypeCode == 3){ %> selected <% } %>>농구 게시판</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="OrderName">제목</label>
                                    <input type="text" name='title' value='<%=searchOption.title%>' class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label" for="MobileNo">게시여부</label>
                                    <select name="isDisplayCode" class="form-control">
                                        <option value="9" <% if( searchOption.isDisplayCode == "9"){ %> selected <% } %>>전체</option>
                                        <option value="1" <% if( searchOption.isDisplayCode == "1"){ %> selected <% } %>>게시함</option>
                                        <option value="0" <% if( searchOption.isDisplayCode == "0"){ %> selected <% } %>>게시안함</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="조회">
                            <a href="/articles/create" class="btn btn-info">신규</a>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th width="10%">게시판구분</th>
                                                <th width="15%">제목</th>
                                                <th width="10%">게시글유형</th>
                                                <th width="5%">조회수</th>
                                                <th width="15%">IP주소</th>
                                                <th width="10%">게시상태</th>
                                                <th width="15%">등록일</th>
                                                <th width="10%">등록자</th>
                                            </tr>
                                        </thead>
                                        <tbody class="hoverTblBody">
                                            <% for(var i=0;i<articles.length;i++){%>
                                                <tr>
                                                    <td>
                                                        <% if (articles[i].board_type == 1) { %>
                                                            야구 게시판
                                                        <% } else if (articles[i].board_type == 2) { %>
                                                            축구 게시판
                                                        <% } else { %>
                                                            농구 게시판
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/articles/modify/<%= articles[i].articleIdx %>">
                                                            <%= articles[i].title %>
                                                        </a>
                                                    </td>
                                                    <td><%= articles[i].article_type %></td>
                                                    <td><%= articles[i].view_cnt %></td>
                                                    <td><%= articles[i].ipAddress %></td>
                                                    <td><%= articles[i].display %></td>
                                                    <td><%= articles[i].registDate %></td>
                                                    <td><%= articles[i].registUserIdx %></td>
                                                </tr>
                                            <% } %>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
