
            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>채널 정보 관리</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home ></a>
                        </li>
                        <li>
                            <a>채널 정보 관리 ></a>
                        </li>
                        <li class="active">
                            <strong>확인/수정</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <form action="/channel/modify/<%=channel.channel_id%>" id='channelForm' method="post">
                <div class="wrapper wrapper-content">
                    <div class="ibox-content m-b-sm border-bottom">

                        <!-- 게시판 영역 -->
                        <div class="row">
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label class="control-label">채널</label>
                                    <select name="categoty_code" id="categoty_code" class="form-control">
                                        <option value="0" <% if( channel.categoty_code == "0"){ %> selected <% } %>>선택</option>
                                        <option value="1" <% if( channel.categoty_code == "1"){ %> selected <% } %>>공지채널</option>
                                        <option value="2" <% if( channel.categoty_code == "2"){ %> selected <% } %>>잡담채널</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- 글 제목 영역 -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">채널이름</label>
                                    <input type="text" name="channel_name" id="channel_name" class="form-control" value="<%=channel.channel_name%>">
                                </div>
                            </div>
                        </div>

                        <!-- 글 내용 입력 영역 -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">채널설명</label>
                                    <textarea class="form-control" name='channel_desc' id='channel_desc' rows="10" cols="5">
                                        <%=channel.channel_desc%>
                                    </textarea>
                                </div>
                            </div>
                        </div>

                        <!-- 게시글 유형, 게시 여부, 등록자 입력 영역 -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">동시채널접속자수</label>
                                    <input type="text" name="user_limit" id="user_limit" class="form-control" value="<%=channel.user_limit%>">
                                </div>
                            </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">게시여부</label>
                                        <select name="channel_state" id="channel_state" class="form-control">
                                            <option value="9" <% if( channel.channel_state == "9"){ %> selected <% } %>>선택</option>
                                            <option value="1" <% if( channel.channel_state == "1"){ %> selected <% } %>>게시함</option>
                                            <option value="0" <% if( channel.channel_state == "0"){ %> selected <% } %>>게시안함</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">등록아이디</label>
                                        <input type="text" name="reg_member_id" id="reg_member_id" class="form-control" value="<%=channel.reg_member_id%>">
                                    </div>
                                </div>
                        </div>

                        <!-- 저장/목록 이동 버튼 -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">저장</button>
                            <a href="/channel/list"><button type="button" id="btnDelete" class="btn btn-danger">삭제</button></a>
                            <a href="/channel/list" class="btn btn-info">목록</a>
                        </div>

                    </div>
                </div>
            </form>

    <script>

        $("#btnDelete").click(function() {

        if(confirm("정말로 삭제하시겠습니까?")) {
            // 사용자가 confirm창의 확인버튼을 누르면 true가 반환되기 때문에..
            // 확인버튼 클릭시 실행해야하는 기능 구현
            // location.href = "사용자 웹브라우저를 특정 웹페이지url로 이동시킨다."
            location.href = "/channel/delete?aid=<%=channel.channel_id%>";
        } else {
            alert("삭제를 취소했습니다.");
        }


        });

    </script>