
    <!--우측 콘텐츠 헤더영역 -->
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>관리자계정</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Home</a> >
                </li>
                <li>
                    <a>관리자계정 확인/수정</a> >
                </li>
                <li class="active">
                    <strong>수정</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <!--우측 콘텐츠 영역 -->
    <form action="/admin/modify/<%=admin.admin_member_id%>" method="post" id="adminForm">
        <div class="wrapper wrapper-content">
            <div class="ibox-content m-b-sm border-bottom">
                <!-- 회사코드, 관리자 아이디, 암호 -->
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">소속회사</label>
                            <select name="companyCode" id="companyCode" class="form-control">
                                <option value="0">선택</option>
                                <option value="1">자회사</option>
                                <option value="2">협력사</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">관리자아이디</label>
                            <input type="text" name="admin_id" id="admin_id"  class="form-control" value="<%admin.admin_id%>">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">관리자암호</label>
                            <input type="password" name="admin_password" id="admin_password"  class="form-control">
                        </div>
                    </div>
                </div>

                <!-- 관리자명, 메일주소, 전화번호 -->
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">관리자명</label>
                            <input type="text" name="admin_name" id="admin_name"  class="form-control" value="<%admin.admin_name%>">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">메일주소</label>
                            <input type="email" name="email" id="email"  class="form-control"  value="<%admin.email%>">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">전화번호</label>
                            <input type="tel" name="telephone" id="telephone"  class="form-control"  value="<%admin.telephone%>">
                        </div>
                    </div>
                </div>

                <!-- 사용여부, 부서명 -->
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">사용여부</label>
                            <select name="usedYnCode" id="usedYnCode" class="form-control">
                                <option value="0">선택</option>
                                <option value="1">사용중</option>
                                <option value="2">사용불가</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">부서명</label>
                            <input type="text" name="dept_name" id="dept_name"  class="form-control"  value="<%admin.dept_name%>">
                        </div>
                    </div>
                </div>

                <!-- 저장/목록이동 버튼  -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a href="/admin/list" class="btn btn-info">목록</a>
                </div>

            </div>
        </div>
    </form>

    <script>

        //서버에서 보내준 html웹페이지가 사용자 웹브라우저에
        //모두 렌더링이 완료된 시점에 발생 $(document).ready();
        $(document).ready(function(){
        });


        //form태그내 사용자가 입력한 데이터 유효성검사(Validation Check)함수 구현
        $("#adminForm").submit(function(){

            //클라이언트 자바스크립트 디버거 직접(코드상에) 설정하기 
            //debugger;

            console.log("게시판유형 선택코드:",$("#companyCode").val());


            //게시판 유형값 선택여부 체크 
            if($("#companyCode").val() == "0"){
                alert("소속회사를 선택해주세요.");
                $("#companyCode").focus();
                return false;
            }

            //제목 입력요소 유효성 검사 
            if($("#title").val() == ""){
                alert("제목을 선택해주세요.");
                $("#title").focus();
                return false;
            }

            //게시글 유형코드 선택여부 체크 
            if($("#articleTypeCode").val() == "0"){
                alert("게시글 유형을 선택해주세요.");
                $("#articleTypeCode").focus();
                return false;
            }

            //게시여부 선택 체크 
            if($("#isDisplayCode").val() == "9"){
                alert("게시여부를 선택해주세요.");
                $("#isDisplayCode").focus();
                return false;
            }

            //작성자 입력여부 체크 
            if($("#register").val() == ""){
                alert("작성자명을 입력해주세요.");
                $("#register").focus();
                return false;
            }

            //최종 웹브라우저에서 서버로 데이터를 전송하기전에 클라이언트 디버깅을 걸어보자..
            //debugger;

            return true;
        });


    </script>


